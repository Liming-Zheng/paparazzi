<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="500" name="Rotorcraft Basic (Enac)" security_height="2.0">
  <header>
#include "autopilot.h"
#include "generated/modules.h"
</header>
  <waypoints>
    <waypoint lat="51.990631" lon="4.376808" name="HOME"/>
    <waypoint name="CLIMB" x="-0.7" y="-0.6"/>
    <waypoint name="STDBY" x="0.5" y="0.3"/>
    <waypoint name="p1" x="0.8" y="0.5" alt="1.8"/>
    <waypoint name="p2" x="0.8" y="0.5" alt="1.0"/>
    <waypoint name="TD" x="0.6" y="-1.3"/>
    <waypoint lat="51.9905834" lon="4.3767710" name="_CZ1"/>
    <waypoint lat="51.9906440" lon="4.3767060" name="_CZ2"/>
    <waypoint lat="51.9906860" lon="4.3768080" name="_CZ3"/>
    <waypoint lat="51.9906238" lon="4.3768729" name="_CZ4"/>
  </waypoints>
  <sectors>
    <sector color="blue" name="CyberZoo">
      <corner name="_CZ1"/>
      <corner name="_CZ2"/>
      <corner name="_CZ3"/>
      <corner name="_CZ4"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 1)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Automatic Takeoff">
      <call_once fun="NavResurrect()"/>
      <call_once fun="autopilot_set_in_flight(false)"/>
      <call_once fun="take_off_enter()"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/> 
      <stay alt="2.0" wp="CLIMB" until="GetPosHeight() @GT 1.5"/>
    </block>
    <!-- <block name="CLIMB">
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/> 
      <stay alt="0.8" wp="CLIMB" until="GetPosHeight() @GT 0.6"/>
    </block> -->
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <set value="false" var="force_forward"/>
      <stay wp="STDBY"/>
    </block>
    <block name="stay_p1">
      <set value="false" var="force_forward"/>
      <stay wp="p1"/>
    </block>
    <block name="stay_p2" >
      <set value="false" var="force_forward"/>
      <stay wp="p2"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <set value="false" var="force_forward"/>
      <go vmode="alt" wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="takeoff_stage == 3" deroute="pivot_land"/>
      <call_once fun="take_off_enter()"/>
      <stay climb="nav.descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="pivot_land">
      <stay alt="0.0" wp="TD"/>
      <exception cond="LessThan(eulers_zxy.theta, RadOfDeg(-89.0))" deroute="landed"/>
    </block>
    <block name="landed">
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
