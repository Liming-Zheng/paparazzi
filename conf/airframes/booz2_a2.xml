<airframe name="BOOZ2_A1">

  <servos min="0" neutral="0" max="0xff">
    <servo name="PITCH" no="0" min="0" neutral="0" max="255"/>
    <servo name="ROLL"  no="1" min="0" neutral="0" max="255"/>
